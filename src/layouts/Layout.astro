---
import Header from '../components/Header.tsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="bg-base-100" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playwrite+SK:wght@100..400&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="sticky top-0 z-10">
			<Header />
		</div>
		<slot />
	</body>
</html>
<style>
	html {
		font-family: "Ubuntu", sans-serif;
		/* background: rgb(154,154,159);
		background: radial-gradient(circle, rgba(154,154,159,1) 25%, rgba(66,66,66,1) 100%); */
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
